<div class="p-3 mt-4 shadow-sm rounded bg-white">
    <h5 class="text-center mb-4 fw-bold">🔐 Thay đổi mật khẩu</h5>

    <!-- Mật khẩu cũ -->
    <div class="mb-3">
        <label class="form-label fw-semibold">Mật khẩu cũ</label>
        <input id="oldPassword" type="password" class="form-control" placeholder="Nhập mật khẩu cũ" />
        <span id="oldPasswordError" class="text-danger small"></span>
    </div>

    <!-- Mật khẩu mới -->
    <div class="mb-3">
        <label class="form-label fw-semibold">Mật khẩu mới</label>
        <div class="position-relative auth-pass-inputgroup">
            <input id="newPassword" type="password" class="form-control pe-5 password-input"
                   placeholder="Nhập mật khẩu mới" />
            <button class="btn btn-link position-absolute end-0 top-0 text-muted password-toggle"
                    type="button">
                <i class="ri-eye-fill"></i>
            </button>
        </div>
        <span id="newPasswordError" class="text-danger small"></span>
    </div>

    <!-- Xác nhận mật khẩu -->
    <div class="mb-3">
        <label class="form-label fw-semibold">Xác nhận mật khẩu mới</label>
        <div class="position-relative auth-pass-inputgroup">
            <input id="confirmPassword" type="password" class="form-control pe-5 password-input"
                   placeholder="Nhập lại mật khẩu" />
            <button class="btn btn-link position-absolute end-0 top-0 text-muted password-toggle"
                    type="button">
                <i class="ri-eye-fill"></i>
            </button>
        </div>
        <span id="confirmPasswordError" class="text-danger small"></span>
    </div>

    <!-- Nút submit -->
    <div class="text-center">
        <button id="btnChangePassword" type="button" class="btn btn-primary w-100 fw-semibold">
            Cập nhật mật khẩu
        </button>
    </div>
</div>
