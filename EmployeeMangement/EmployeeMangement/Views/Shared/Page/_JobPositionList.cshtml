<style>
    /* Giữ header bảng luôn nền trắng, chữ đen */
    .table thead.thead-white th {
        background-color: #ffffff !important;
        color: #000000 !important;
        border-bottom: 2px solid #dee2e6 !important;
        box-shadow: none !important;
        background-image: none !important;
    }

    [data-bs-theme="dark"] .table thead.thead-white th {
        background-color: #ffffff !important;
        color: #000000 !important;
    }
</style>

<div class="container-fluid">

    <!-- Bộ lọc -->
    <div class="card filter-card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Danh sách vị trí công tác</span>
            <button class="btn btn-success" id="btnAdd">
                <i class="ri-add-line me-1"></i> Thêm vị trí
            </button>
        </div>

        <div class="card-body p-4">
            <div class="row g-3 align-items-end">
                <div class="col-lg-4 col-md-6">
                    <label class="form-label fw-semibold">Tìm kiếm</label>
                    <div class="position-relative">
                        <i class="ri-search-line position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="search" id="keyword" class="form-control ps-5" placeholder="Mã, tên, từ khóa...">
                    </div>
                </div>

                <div class="col-lg-2 col-md-6">
                    <label class="form-label fw-semibold">Trạng thái</label>
                    <select class="form-select" id="statusFilter">
                        <option value="">Tất cả</option>
                        <option value="1">Kích hoạt</option>
                        <option value="0">Tạm khóa</option>
                    </select>
                </div>

                <div class="col-lg-3 col-md-6">
                    <label class="form-label fw-semibold">Ngày tạo</label>
                    <div class="d-flex align-items-center gap-2">
                        <input type="date" id="createDateFrom" class="form-control form-control-sm">
                        <span>-</span>
                        <input type="date" id="createDateTo" class="form-control form-control-sm">
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-end">
                    <button type="button" class="btn btn-outline-secondary" id="clearFilter">Xóa bộ lọc</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách vị trí công tác -->
    <div class="card list-card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0 text-dark border">
                    <thead class="thead-white">
                        <tr>
                            <th class="text-center" style="width: 50px;">
                                <input type="checkbox" class="form-check-input">
                            </th>
                            <th style="min-width: 60px;">ID</th>
                            <th style="min-width: 100px;">Mã vị trí</th>
                            <th style="min-width: 160px;">Tên vị trí</th>
                            <th style="min-width: 150px;">Từ khóa</th>
                            <th style="min-width: 180px;">Địa chỉ</th>
                            <th class="text-center" style="min-width: 120px;">Trạng thái</th>
                           
                            <th class="text-center" style="min-width: 100px;">Hành động</th>
                        </tr>
                    </thead>

                    <tbody id="jobPositionList">
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" class="form-check-input">
                            </td>
                            <td><span class="fw-bold text-primary">01</span></td>
                            <td><span class="fw-medium">VP001</span></td>
                            <td><span class="fw-medium text-truncate d-inline-block" style="max-width: 140px;">Trưởng nhóm kỹ thuật</span></td>
                            <td><span class="fw-medium text-truncate d-inline-block" style="max-width: 120px;">KyThuatLead</span></td>
                            <td><span class="fw-medium text-truncate d-inline-block" style="max-width: 150px;">Khu A, Tòa nhà Alpha</span></td>
                            <td class="text-center">
                                <span class="badge bg-success">Kích hoạt</span>
                            </td>
                           
                            <td class="text-center">
                                <div class="dropup dropdown-action">
                                    <a href="#" class="btn btn-soft-primary btn-sm dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="ri-more-2-fill"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        <li>
                                            <a href="#" class="dropdown-item view-item-btn text-primary">
                                                <i class="ri-eye-fill fs-16 me-1"></i> Xem chi tiết
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item edit-item-btn text-warning">
                                                <i class="ri-edit-fill fs-16 me-1"></i> Chỉnh sửa
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item remove-item-btn text-danger delete-item-btn">
                                                <i class="ri-delete-bin-5-fill fs-16 me-1"></i> Xóa bỏ
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/Shared/Page/_JobPositionCreateUpdate.cshtml")
    @Html.Partial("~/Views/Shared/Page/_JobPositionDetail.cshtml")

    <!-- Không có dữ liệu -->
    <div class="text-center no-data d-none" id="noData">
        <i class="ri-inbox-line" style="font-size: 3rem; color: #cbd5e1;"></i>
        <p class="mt-3 fw-medium">Không có dữ liệu phù hợp</p>
    </div>

    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-end" id="paginationJ"></ul>
    </nav>
</div>
<script>
    document.dispatchEvent(new CustomEvent("componentLoaded", {
        detail: { script: "/js/position.js" } // file JS riêng của trang này
    }));
</script>