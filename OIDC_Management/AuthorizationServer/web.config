<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <!-- Tăng giới hạn URL và Query String để nhận token dài từ Microsoft -->
        <requestLimits maxAllowedContentLength="300000000" maxUrl="65536" maxQueryString="65536" />
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>
