

<div class="main-content">
    <!-- PAGE-WRAPPER -->
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">

                        <!-- HeadingMain -->
                        <h4 class="mb-sm-0">

                            Danh sách Client

                        </h4>
                        <!-- HeadingMain./. -->
                        <!-- ucBreadcrumb -->
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="#">Dasboard</a></li>
                                <li class="breadcrumb-item active">Title</li>
                            </ol>
                        </div>
                        <!-- ucBreadcrumb./. -->
                    </div>
                </div>
            </div>

            <!-- ContentMain -->

            <div class="row">

                <div class="col-xl-12">
                    <div class="card">
                        <!-- ucSearchBar -->
                        <div class="card-header align-items-center d-flex gap-2">

                            <!-- Left group -->
                            <div class="flex-shrink-0 d-flex gap-2">

                                <a href="#" class="btn btn-danger waves-effect waves-light d-none">
                                    <i class="ri-delete-bin-2-line"></i>
                                    Xóa
                                </a>

                                <a href="#" class="btn btn-success add-btn waves-effect waves-light" id="btnAddClient">
                                    <i class="ri-add-line align-bottom me-1"></i>
                                    Thêm Client
                                </a>

                                <!-- Beautiful Select Filter -->
                                <div>
                                    <select id="clientStatusFilter" class="form-select form-select-sm"
                                            style="min-width:150px; height:36px; padding-left:10px;">
                                        <option value="">-- Tất cả --</option>
                                        <option value="1">Kích hoạt</option>
                                        <option value="0">Tạm khóa</option>
                                    </select>
                                </div>

                            </div>

                            <!-- Search -->
                            <div class="d-flex gap-2 flex-grow-1">
                                <div class="search-box flex-grow-1">
                                    <i class="ri-search-line search-icon"></i>
                                    <input type="search" class="form-control search bg-light border-light"
                                           placeholder="Search Client...">
                                </div>
                            </div>

                            <!-- Right group -->
                            <div class="flex-shrink-0 d-flex gap-2">

                                <!-- Removed Filters button -->

                                <a href="#" class="btn btn-outline-primary waves-effect waves-light" id="btnClearFilter">
                                    <i class="ri-close-circle-fill me-1 align-bottom"></i>
                                    Clear
                                </a>
                            </div>
                        </div>
                        <!-- ucSearchBar./. -->

                        <div class="card-body">
                            <div class="live-preview">
                                <div class="table-responsive">
                                    <table id="clientTable" class="table align-middle table-nowrap mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="text-center">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox">
                                                    </div>
                                                </th>
                                                <th class="text-center">STT</th>
                                                <th class="text-left">Client ID</th>
                                                <th class="text-left">Client Secret</th>
                                                <th class="text-left">Tên hiển thị</th>
                                                <th class="text-center">Status</th>
                                                <th class="text-center">Hành động</th>


                                            </tr>
                                        </thead>

                                        <tbody id="content">
                                     </tbody>


                                    </table>
                                </div>
                            </div>

                            <nav aria-label="Page navigation" class="mt-3">
                                <ul class="pagination justify-content-center" id="pagination"></ul>
                            </nav>
                        </div>
                    </div>
                </div>

                <div class="col-xl-12" id="addClientFormCard" style="display:none;">
                    <div class="card">
                        <div class="modal-header p-2 bg-primary text-center text-white">
                            <h5 class="modal-title text-white">Thêm / Sửa Client</h5>
                        </div>

                        <div class="card-body p-4">
                            <form id="clientForm">

                                <!-- 📌 NHÓM 1 – THÔNG TIN BẮT BUỘC -->
                                <div class="row p-3 bg-light rounded mb-3 border">
                                    <h5 class="fw-bold mb-3">Thông tin bắt buộc</h5>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Tên hiển thị *</label>
                                        <input type="text" class="form-control" id="displayName" required>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Redirect URIs *</label>
                                        <input type="text" class="form-control" id="redirectUris" required>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Scope *</label>
                                        <input type="text" class="form-control"
                                               id="scope"
                                               placeholder="openid profile email"
                                               required>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Grant Type *</label>
                                        <input type="text" class="form-control"
                                               id="grantType"
                                               placeholder="authorization_code"
                                               required>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Authority (Issuer) *</label>
                                        <input type="text" class="form-control"
                                               id="authority"
                                               placeholder="https://your-oidc-server.com"
                                               required>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Trạng thái *</label>
                                        <select id="clientStatus" class="form-select">
                                            <option value="1">Active</option>
                                            <option value="0">Inactive</option>
                                        </select>


                                    </div>
                                </div>

                                <!-- 📌 NHÓM 2 – TÙY CHỌN -->
                                <div class="row p-3 bg-light rounded mb-3 border">
                                    <h5 class="fw-bold mb-3">Thông tin tùy chọn</h5>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Callback Path</label>
                                        <input type="text" class="form-control" id="callbackPath">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">SignOut-Callback Path</label>
                                        <input type="text" class="form-control" id="signOutCallBackPath">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Access Denied Path</label>
                                        <input type="text" class="form-control" id="accessDeniedPath">
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Key Word</label>
                                        <input type="text" class="form-control" id="keyWord">
                                    </div>
                                </div>

                                <!-- HỆ THỐNG -->
                                <div class="row p-3 bg-light rounded border">
                                    <h5 class="fw-bold mb-3">Hệ thống</h5>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Client ID</label>
                                        <input type="text" class="form-control" id="clientId" readonly>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Client Secret</label>
                                        <input type="text" class="form-control" id="clientSecret" readonly>
                                    </div>
                                </div>

                            </form>
                        </div>

                        <div class="card-footer">
                            <button type="button" class="btn btn-secondary" id="btnCancelClient">Hủy</button>
                            <button type="submit" form="clientForm" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </div>



            </div>

        </div>
    </div>

</div>

<script>
    document.dispatchEvent(new CustomEvent("componentLoaded", {
        detail: { script: "/js/client.js" }
    }));
</script>

