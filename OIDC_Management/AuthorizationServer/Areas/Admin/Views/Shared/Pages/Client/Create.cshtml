
﻿



﻿<div class="main-content">

    <!-- PAGE-WRAPPER -->
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">

                        <!-- HeadingMain -->
                        <h4 class="mb-sm-0">

                            Danh sách Client

                        </h4>
                        <!-- HeadingMain./. -->
                        <!-- ucBreadcrumb -->
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="#">Dasboard</a></li>
                                <li class="breadcrumb-item active">Title</li>
                            </ol>
                        </div>
                        <!-- ucBreadcrumb./. -->
                    </div>
                </div>
            </div>

            <!-- ContentMain -->

            <div class="row">
                <div class="col-xl-12">
                    <div class="card">

                        <!-- Header Modal -->
                        <div class="modal-header p-2 bg-primary text-center text-white">
                            <h5 class="modal-title p-2 bg-primary text-center text-white" id="clientModalLabel">Thêm / Sửa Client</h5>
                        </div>

                        <!-- Body Modal -->
                        <div class="modal-body p-4">
                            <form id="clientForm">

                                <!-- Thông tin Client -->
                                <div class="row p-3 bg-light rounded mb-3 border">
                                    <h5 class="fw-bold mb-3">Thông tin Client</h5>

                                    <!-- Client ID -->
                                    <div class="col-md-6 mb-3">
                                        <label for="clientId" class="form-label">Client ID</label>
                                        <input type="text" class="form-control" id="clientId" placeholder="Nhập Client ID" required>
                                    </div>

                                    <!-- Client Secret -->
                                    <div class="col-md-6 mb-3">
                                        <label for="clientSecret" class="form-label">Client Secret</label>
                                        <input type="text" class="form-control" id="clientSecret" placeholder="Nhập Client Secret" required>
                                    </div>

                                    <!-- Display Name -->
                                    <div class="col-md-6 mb-3">
                                        <label for="displayName" class="form-label">Tên hiển thị</label>
                                        <input type="text" class="form-control" id="displayName" placeholder="Nhập tên hiển thị" required>
                                    </div>

                                    <!-- Status -->
                                    <div class="col-md-6 mb-3">
                                        <label for="clientStatus" class="form-label">Trạng thái</label>
                                        <select class="form-select" id="clientStatus">
                                            <option value="1">Active</option>
                                            <option value="0">Inactive</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Thông tin hệ thống -->
                                <div class="row p-3 bg-light rounded border">
                                    <h5 class="fw-bold mb-3">Thông tin hệ thống</h5>

                                    <!-- Created By -->
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">Người tạo</label>
                                        <input type="text" class="form-control" id="createdBy" value="—" readonly>
                                    </div>

                                    <!-- Updated By -->
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">Người sửa</label>
                                        <input type="text" class="form-control" id="updatedBy" value="—" readonly>
                                    </div>

                                    <!-- Created At -->
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">Ngày tạo</label>
                                        <input type="text" class="form-control" id="createdAt" value="—" readonly>
                                    </div>

                                    <!-- Updated At -->
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">Ngày sửa</label>
                                        <input type="text" class="form-control" id="updatedAt" value="—" readonly>
                                    </div>
                                </div>

                            </form>
                        </div>

                        <!-- Footer Modal -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" form="clientForm" class="btn btn-primary">Lưu</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>